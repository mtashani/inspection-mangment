{
  "name": "inspection-management-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run generate:css && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "generate:css": "tsx scripts/generate-css.ts",
    "design-system:build": "npm run generate:css",
    "design-system:validate": "node scripts/validate-design-system.js",
    "css:optimize": "node scripts/optimize-css.js",
    "analyze": "ANALYZE=true npm run build",
    "bundle:analyze": "npx @next/bundle-analyzer",
    "css:analyze": "npx bundlesize",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:components": "jest --testPathPattern=components",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:browser": "ts-node src/test/browser/run-browser-tests.ts",
    "test:browser:unit": "ts-node src/test/browser/run-browser-tests.ts unit",
    "test:browser:integration": "ts-node src/test/browser/run-browser-tests.ts integration",
    "test:browser:e2e": "ts-node src/test/browser/run-browser-tests.ts e2e",
    "test:browser:accessibility": "ts-node src/test/browser/run-browser-tests.ts accessibility",
    "test:browser:performance": "ts-node src/test/browser/run-browser-tests.ts performance",
    "test:accessibility": "jest --testPathPattern=accessibility-testing",
    "test:performance": "jest --testPathPattern=performance-testing",
    "test:mobile": "jest --testPathPattern=mobile-responsiveness",
    "test:offline": "jest --testPathPattern=offline-functionality",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=CHROMATIC_PROJECT_TOKEN",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.62.7",
    "@tanstack/react-table": "^8.21.0",
    "@types/react-window": "^1.8.8",
    "ajv": "^8.17.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.18.2",
    "html2canvas": "^1.4.1",
    "jalaali-js": "^1.2.7",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.468.0",
    "next": "^15.1.8",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-day-picker": "^9.8.1",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "react-window": "^1.8.11",
    "recharts": "^2.13.3",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.4",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@next/bundle-analyzer": "^15.1.8",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/blocks": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "bundlesize": "^0.18.2",
    "cssnano": "^7.0.6",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.8",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "storybook": "^8.4.7",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250kb"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50kb"
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "npm run design-system:validate",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.2",
      "@types/react-dom": "^19.0.2"
    }
  }
}